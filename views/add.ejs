<%- include('./partials/header.ejs') %>

<h1>Add Book</h1>
<form action="/books/add/<%- user.publisher_id %>" method="POST">
    <label for="title">Title:</label><br>
    <input type="text" id="title" name="title" required><br>

    <label for="description">Description:</label><br>
    <textarea id="description" name="description" required></textarea><br>

    <label for="pieces">Available Copies:</label><br>
    <input type="number" id="pieces" name="pieces" required><br>

    <label for="pages">Pages:</label><br>
    <input type="number" id="pages" name="pages" required><br>

    <label for="publish_year">Publish Year:</label><br>
    <input type="number" id="publish_year" name="publish_year" required><br>

    <label for="author">Author:</label><br>
    <select id="author" name="author" required>
        <% authors.forEach(function(author) { %>
            <option value="<%= author.author_id %>"><%= author.name %></option>
        <% }) %>
    </select><br>

    <input type="submit" value="Submit">
</form>


<%- include('./partials/footer.ejs') %>